{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug Go",
        "type": "go",
        "request": "launch",
        "mode": "debug",
        "cwd": "${workspaceFolder}/backend/cmd/api",
        "program": "${workspaceFolder}/backend/cmd/api/main.go",
      },
      {
        "name": "Debug Eelctron",
        "type": "node",
        "request": "launch",
        "cwd": "${workspaceFolder}/frontend",
        "runtimeExecutable": "${workspaceFolder}/frontend/node_modules/.bin/electron",
        "windows": {
          "runtimeExecutable": "${workspaceFolder}/frontend/node_modules/.bin/electron.cmd"
        },
        "program": "${workspaceFolder}/frontend/main.js",
        "args" : ["."],
        "outputCapture": "std"
      }
    ]
  }